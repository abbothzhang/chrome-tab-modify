{
  "manifest_version": 2,
  "name": "Tab Camouflage - 标签页修改",
  "version": "0.1",
  "description": "自定义Tab标题 / icon",
  "author": "abboth",
  "icons": {
    "16": "imgs/icon.png",
    "48": "imgs/icon.png",
    "128": "imgs/icon.png"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_icon": "imgs/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "background": {
    "page": "background.html"
  },
  "homepage_url": "https://github.com/nismison"
}